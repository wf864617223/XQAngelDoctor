<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/continer"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/common_btn"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@mipmap/next"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"/>
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/common_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/common_btn"
        android:layout_toRightOf="@+id/checkbox"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/prompt_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/prompt"
            android:gravity="center"
            android:textColor="@color/title_backg"/>
        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:lines="2"
            android:ellipsize="end"
            android:text="@string/prompt"
            android:gravity="center_vertical"
            android:textColor="@color/main_list_text"/>
        <TextView
            android:id="@+id/msg_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/main_list_text"/>
    </LinearLayout>
</RelativeLayout>